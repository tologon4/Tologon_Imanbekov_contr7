@model Book

@{
    ViewBag.Title = "Book Create";
    Layout = "_Layout";
}

<h3 class="text-center mt-4">Заполните форму, чтобы добавить книгу</h3>
<form asp-action="Create" method="post" class="connection-form" enctype="multipart/form-data">
@Html.ValidationSummary(true)
    <div class="row  mt-5">
        <div class="col col-6 mx-auto">
            <div class="mt-3 row">
                <label for="exName">Название автора<span class="text-danger ms-2" asp-validation-for="Autor"></span></label>
                <div class="input-group">
                    <input asp-for="Autor" type="text" class="form-control rounded-1  mt-3" placeholder="введите имя" id="exName">
                </div>
            </div>
            <div class="mt-3 row">
                <label for="name">Название книги<span class="text-danger ms-2" asp-validation-for="Name"></span></label>
                <div class="input-group">
                    <input asp-for="Name" type="text" class="form-control rounded-1  mt-3" placeholder="введите название" id="name">
                </div>
            </div>
            <div class="mt-3 row">
                <label for="releaseDate">Год выпуска<span class="text-danger ms-2" asp-validation-for="ReleaseYear"></span></label>
                <div class="input-group">
                    <input asp-for="ReleaseYear" type="text" class="form-control rounded-1  mt-3" placeholder="введите название" id="releaseDate">
                </div>
            </div>
            <div class="mt-3">
                <label for="descr">Описание книги<span class="text-danger ms-2" asp-validation-for="Description"></span></label>
                <textarea id="descr" placeholder="Подробное описание" class="form-control form-control-lg mt-3  h-100" asp-for="Description" type="text" rows="3"></textarea>
            </div>
            <div class="mt-3">
                <label for="file">Выберите файл для загрузки</label>
                <input id="file" type="file" name="uploadedFile" class="form-control form-control-lg rounded-1" required="required">
            </div>
            <button type="submit" class="btn btn-success mt-5 px-3">Добавить книгу</button>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}